{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
        // fix incorrect types for flexsearch
        // https://github.com/microsoft/TypeScript/issues/22217#issuecomment-369783776
        "*": ["types/*"]
    }
  },
  "include": [
    "./components/**/*",
    "./entrypoints/**/*",
    "./redux/**/*",
    "./shared/**/*"
  ]
}
